<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="FocusableContainer" parent="Container">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>

    <style name="InputRounded">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:background">@drawable/input_bg</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/grey_2</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="Base.Widget.AppCompat.ProgressBar.FlacoProgressBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:indeterminateTint">@color/primary</item>
        <item name="android:layout_gravity">center</item>
        <item name="layout_anchorGravity">center</item>
    </style>

    <style name="Base.Widget.AppCompat.TextView.PageTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">24dp</item>
    </style>

    <style name="Base.Widget.AppCompat.TextView.PageTitle.CatalogItemScreen">
        <item name="android:layout_marginBottom">64dp</item>
    </style>

    <style name="Widget.Design.FloatingActionButton.FlacoMusicFab" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="tint">@color/white</item>
        <item name="android:backgroundTint">@color/primary</item>
        <item name="borderWidth">0dp</item>
    </style>
</resources>